/* pages/index1/index.wxss */
page {
  width: 100vw;
  height: 100vh;
  background-color: #f1dcac;
}
.upload_main {
  position: relative;
}
.upload_main .upload_btn {
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  margin-top: 40vh;
  font-size: 40rpx;
  font-weight: 600;
  color: #837e74;
  border: 1rpx solid currentColor;
  padding: 20rpx 100rpx;
}
.upload_content {
  text-align: center;
}
.upload_content .upload_img {
  width: 100%;
}
.upload_content .upload_title {
  font-size: 40rpx;
  font-weight: 600;
  margin-bottom: 40rpx;
}
.result_content {
  position: relative;
  height: 100%;
  width: 100%;
}
.result_content .result_img {
  width: 100%;
}
.result_content .result_info_wrap {
  position: absolute;
  background-color: rgba(0, 0, 0, 0.4);
  bottom: 40%;
  width: 100%;
}
.result_content .result_info_wrap .result_title {
  font-size: 40rpx;
  font-weight: 600;
  margin-bottom: 40rpx;
}
.result_content .result_info_wrap .result_item {
  color: #fff;
  padding: 20rpx;
}
